<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinexample">
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MaterialTabsActivity"></activity>
        <activity android:name=".activities.BottomNavigationActivity" />
        <activity
            android:name=".activities.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.FragmentActivity" />
        <activity android:name=".activities.firebase.ResetPasswordActivity" />
        <activity android:name=".activities.firebase.HomeActivity" />
        <activity android:name=".activities.firebase.RegisterActivity" />
        <activity android:name=".activities.firebase.LoginActivity" />
        <activity android:name=".activities.WeatherDetailsActivity" />
        <activity android:name=".activities.WeatherActivity" />
        <activity android:name=".activities.AddNoteActivity" />
        <activity android:name=".activities.NotesActivity" />
        <activity android:name=".activities.LiveDataActivity" />
        <activity android:name=".activities.SharedPreferenceActivity" />
        <activity android:name=".activities.RetrofitActivity" />
        <activity android:name=".activities.RoomDBActivity" />
        <activity android:name=".activities.SqliteActivity" />
        <activity android:name=".activities.BottomSheetDialogActivity" />
        <activity android:name=".activities.FullScreenProgressBarActivity" />
        <activity android:name=".activities.ProgressDialogActivity" />
        <activity android:name=".activities.TimeActivity" />
        <activity android:name=".activities.DateActivity" />
        <activity android:name=".activities.BaseActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>