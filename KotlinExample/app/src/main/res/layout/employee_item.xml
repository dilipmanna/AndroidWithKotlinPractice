<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_employeeImg"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/tv_employeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@id/iv_employeeImg"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="Michael Lawson"
        android:textSize="@dimen/_15sdp"/>
    <TextView
        android:id="@+id/tv_employeeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_employeeName"
        android:layout_toLeftOf="@id/iv_employeeImg"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="michael.lawson@reqres.in"
        android:textSize="@dimen/_12sdp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/colorBlack"
        android:layout_below="@id/iv_employeeImg"/>

</RelativeLayout>